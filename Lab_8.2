using System;

class DiskPhone
{
    public string PhoneNumber { get; set; }
    public char[] AvailableSymbols { get; set; }

    public void MakeCall()
    {
        Console.WriteLine("Dialing " + PhoneNumber + "...");
    }

    public void ReceiveCall()
    {
        Console.WriteLine("Incoming call...");
    }
}

class ButtonPhone : DiskPhone
{
    public new char[] AvailableSymbols
    {
        get
        {
            char[] symbols = base.AvailableSymbols;
            Array.Resize(ref symbols, symbols.Length + 2);
            symbols[symbols.Length - 2] = '*';
            symbols[symbols.Length - 1] = '#';
            return symbols;
        }
        set
        {
            base.AvailableSymbols = value;
        }
    }

    public void DisplayCallerId(string callerId)
    {
        Console.WriteLine("Incoming call from " + callerId);
    }
}

class MobilePhone : ButtonPhone
{
    public int ScreenResolution { get; set; }
    public double ScreenSize { get; set; }
    public string Color { get; set; }

    public void SendSMS()
    {
        Console.WriteLine("Sending SMS...");
    }

    public void ReceiveSMS()
    {
        Console.WriteLine("Incoming SMS...");
    }
}

class ColorMobilePhone : MobilePhone
{
    public int ColorCount { get; set; }
    public bool DualSim { get; set; }
    public string SecondPhoneNumber { get; set; }

    public void SendMMS()
    {
        Console.WriteLine("Sending MMS...");
    }

    public void ReceiveMMS()
    {
        Console.WriteLine("Incoming MMS...");
    }
}

class Smartphone : ColorMobilePhone
{
    public bool TouchScreen { get; set; }
    public int MaxMultiTouchCount { get; set; }
    public int CameraCount { get; set; }

    public void TakePhoto()
    {
        Console.WriteLine("Taking a photo...");
    }

    public void RecordVideo()
    {
        Console.WriteLine("Recording a video...");
    }
}

